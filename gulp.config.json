{
  "bower": {
    "json": "bower.json",
    "directory": "bower_components"
  },

  "paths": {
    "scripts": "./src/js/**/*.js",
    "styles": ["./src/styles/**/*.sass", "./src/styles/**/*.css"],
    "assets": "./src/assets/**/*",
    "index": "./src/index.html",
    "dist": {
      "root": "./dist/",
      "assets": "./dist/assets",
      "css": "./dist/css",
      "js": "./dist/js"
    }

  }
}